    <body>
        <div class="main-box">
            <div class="sidebar">
                <a href="/" style="text-decoration: none;">
                    <div class="sidebar-dashboard"><i class="far fa-user fa-2x"></i>
                        <div class="sidebar-dashboard-text">Dashboard</div>
                    </div>
                </a>
                <a href="/addWords" style="text-decoration: none;">
                    <div class="sidebar-add-word"><i class="fas fa-file-word fa-2x"></i>
                        <div class="sidebar-dashboard-text">Add Words</div>   
                    </div>
                </a>
                <a href="/flashcard/sessions" style="text-decoration: none;">
                    <div class="sidebar-flashcard"><i class="fas fa-user fa-2x"></i>
                        <div class="sidebar-dashboard-text">Flashcard</div>
                    </div>
                </a>
                <a href="/mcq/sessions" style="text-decoration: none;">
                    <div class="sidebar-mcq"><i class="fas fa-user fa-2x"></i>
                        <div class="sidebar-dashboard-text">MCQ</div>
                    </div>
                </a>
                <a href="/viewWords" style="text-decoration: none;">
                    <div class="sidebar-word"><i class="fas fa-file-word fa-2x"></i>
                        <div class="sidebar-dashboard-text">View Words</div>
                    </div>
                </a>
            </div>
            <div class="main-dashboard">
                <div class="main-navbar">
                <div class="right_navbar">
                    <div id="right_name"></div>
                        <div id="right_profile">
                            <div class="dropdown">
                                <img id="img_profile" src="" alt="">
                                    <div class="dropdown-content">
                                        <a href="/" style="text-decoration: none;">Dashboard</a>
                                        <a href="/profile" style="text-decoration: none;">Profile</a>
                                        <a href="/viewWords" style="text-decoration: none;">Words</a>
                                        <a href="/flashcard/sessions" style="text-decoration: none;">Flashcard Test</a>
                                        <a href="/mcq/sessions" style="text-decoration: none;">MCQ Test</a>
                                        <a href="/logout" style="text-decoration: none;">Logout</a>

                                    </div>
                            </div>    
                        </div>
                    </div>
                </div>
                {{{body}}}
            </div>
            <div class="hidden">
                <p id="first_name" class="hidden">{{{firstName}}}</p>
                <p id="last_name" class="hidden">{{{lastName}}}</p>
                <p id="profile_pic" class="hidden">{{{profilePicture}}}</p>
            </div>
        </div>
        <script src="../../public/js/main.js"></script>
